<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.appsys.dao.DevUserMapper">
	  <select id="getUserBydevCode" resultType="devUser">
	       select * from `dev_user`
	       <trim prefix="where" prefixOverrides="and|or">
	           <if test="devCode!=null and devCode!=''">
	              and devCode = #{devCode}
	           </if>
	       </trim>
	  </select>
	  
	  <select id="getAppInfoList" resultType="appInfo">
	      select * from `app_info`
	  </select>
	  
	  <!-- 查询总数量 -->
	  <select id="getAppInfoListCount" resultType="int">
	     select count(1) from `app_info`
	     <trim prefix="where" prefixOverrides="and|or">
	     <if test="softwareName!=null and softwareName!=''">
	             and softwareName like concat('%',#{softwareName},'%') 
	        </if>
	     <if test="status!=null and status!=''">
	             and status =#{status} 
	        </if>
	        <if test="flatformId!=null and flatformId!=''">
	             and flatformId #{flatformId}
	        </if>
	        <if test="categoryLevel1!=null and categoryLevel1!=''">
	             and categoryLevel1 #{categoryLevel1} 
	        </if>
	        <if test="categoryLevel2!=null and categoryLevel2!=''">
	             and categoryLevel2 #{categoryLevel2}
	        </if>
	        <if test="querySoftwareName!=null and querySoftwareName!=''">
	             and categoryLevel3 #{categoryLevel3}
	        </if>
	     </trim>
	  </select>
</mapper>